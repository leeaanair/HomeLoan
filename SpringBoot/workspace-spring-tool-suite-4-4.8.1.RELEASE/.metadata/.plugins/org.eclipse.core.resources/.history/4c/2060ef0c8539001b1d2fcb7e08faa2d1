//Method 4	
	@RequestMapping("/home")
	public ModelAndView showHome(@RequestParam("name") String name) {
		ModelAndView mv = new ModelAndView();
		System.out.println(name);
		mv.addObject("name", name);
		mv.setViewName("homepage");		//write the jsp page
		return mv;
	}	

	
